extends layout

block content
  section(class="container-fluid")
    div(class="form-container col-md-6 col-md-offset-3")
      h2 Your #{title}
      div(class="account-type")
      h3(class="text-uppercase") Welcome  #{user.local.username}
      a(href="/explore" class="btn btn-primary btn-lg icon-wrapper") Explore Listings
      a(href="/create-listing" class="btn btn-success btn-lg icon-wrapper") Create a Listing
      a(href="/categories" class="btn btn-info btn-lg icon-wrapper") New Category