extends layout

include mixins/_listingInput

block content
  section(class="container-fluid")
    div(class="form-container col-md-6 col-md-offset-3")
      h1(class="form-header") Creat a Listing
      form(action="/create-listing" method="post")
        input(type="hidden" name="_csrf" value= csrfToken)
        +listingInput('name', 'text', 'enter name')
        +listingInput('address', 'text', 'enter address')
        +listingInput('description', 'textarea', 'enter a description')
        +listingInput('website', 'url', 'http://example.com')
        +listingInput('email', 'email', 'enter an email')
        +listingInput('phone', 'tel', '+2347012345678')
        +listingInput('options', 'text', 'enter categories separated by comma')
        div(form-footer form-group pull-right)
          input(class="btn btn-success" type="submit" value="Create Listing")
